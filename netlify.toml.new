[build]
  command = "npm run build"
  publish = "dist"
  functions = "functions"

[build.environment]
  NODE_VERSION = "18"
  NPM_FLAGS = "--legacy-peer-deps"
  CI = "false"
  SECRETS_SCAN_OMIT_PATHS = "server.js"

[functions]
  node_bundler = "esbuild"
  external_node_modules = ["axios", "cors", "express", "dotenv"]

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
